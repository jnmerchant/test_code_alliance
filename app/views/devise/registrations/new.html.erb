<% header "Sign Up" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>

  <div class="form-group">
    <%= f.text_field :research_area, class: 'form-control', placeholder: 'Research Area' %>
  </div>

  <div class="form-group">
    <%= f.text_field :organization, class: 'form-control', placeholder: 'Organization'  %>
  </div>

  <div class="form-group">
    <%= f.text_field :contact_phone, class: 'form-control', placeholder: 'Contact Phone'  %>
  </div>

  <div class="form-group">
    <%= f.label :entity_size %>
    <%= f.text_field :entity_size, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Contact Email'  %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control estimate-password', placeholder: 'Password'  %>
    <% if @validatable %>
      <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off",
      class: 'form-control estimate-password', placeholder: 'Password Confirmation'  %>
  </div>

  <%= f.submit "Sign up", class: 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
